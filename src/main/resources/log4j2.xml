<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <!-- 定义日志格式 -->
        <Property name="file.log.pattern">%d{YYYY-MM-dd HH:mm:ss} [%C] %-5level %logger{36} - %msg%n</Property>
        <Property name="console.log.pattern">%highlight{%d{YYYY-MM-dd HH:mm:ss} [%C] %-5level %logger{36}} - %msg%n
        </Property>
        <!-- 定义文件名变量 -->
        <Property name="err.filename">logs/err.log</Property>
        <Property name="err.pattern">logs/err.%i.log.gz</Property>
        <Property name="log.filename">logs/log.log</Property>
        <Property name="log.pattern">logs/log.%i.log.gz</Property>
    </Properties>

    <!-- 定义Appender，即目的地 -->
    <Appenders>
        <!-- 定义输出到屏幕 -->
        <Console name="console" target="SYSTEM_OUT">
            <!-- 日志格式引用上面定义的log.pattern -->
            <PatternLayout pattern="${console.log.pattern}"/>
        </Console>
        <!-- 定义输出err到文件,文件名引用上面定义的file.err.filename -->
        <RollingFile name="file.err" bufferedIO="true" fileName="${err.filename}" filePattern="${err.pattern}">
            <PatternLayout pattern="${file.log.pattern}"/>
            <Policies>
                <!-- 根据文件大小自动切割日志 -->
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
            <!-- 保留最近10份 -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <!-- 定义输出log到文件,文件名引用上面定义的file.log.filename -->
        <RollingFile name="file.log" bufferedIO="true" fileName="${log.filename}" filePattern="${log.pattern}">
            <PatternLayout pattern="${file.log.pattern}"/>
            <Policies>
                <!-- 根据文件大小自动切割日志 -->
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
            <!-- 保留最近10份 -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <!-- 定义不同级别日志的去向 -->
    <Loggers>
        <Root level="info">
            <!-- 对info级别的日志，输出到console -->
            <AppenderRef ref="console" level="info"/>
            <AppenderRef ref="file.log" level="info"/>
            <!-- 对error级别的日志，输出到err，即上面定义的RollingFile -->
            <AppenderRef ref="file.err" level="error"/>
        </Root>
    </Loggers>
</Configuration>