<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="casia.isiteam.sensitivedetection.mapper.SensitiveWordMapper">

    <select id="findAllKeywords" resultType="java.lang.String">
        SELECT keyword
        FROM sensitive_words
    </select>

    <insert id="saveKeywords" parameterType="java.lang.String">
        <if test="keywords.size() == 0">
            SELECT 'x'
        </if>
        <if test="keywords.size() != 0">
            INSERT IGNORE INTO sensitive_words (keyword)
            VALUES
            <foreach collection="keywords" item="keyword" separator=",">
                (#{keyword})
            </foreach>
        </if>
    </insert>

</mapper>